.sidenav
    list-style none
    display flex
    flex-direction column
    li
        background #fff
    a
        display block
        padding 20px
        color #fff
        position relative
        background #1F2937
    .active
        background #1F2937
        position relative
        &:before
            content ''
            position absolute
            width 10px
            height 10px
            background #fff
            top -10px
            right 0
        a
            background #fff
            color #000
            border-radius 10px 0 0 10px
            &:before
                content ''
                position absolute
                background #1F2937
                border-radius 10px
                width 20px
                height 20px
                top -20px
                right 0
        + li a
            border-top-right-radius 10px

.sidebar
    width 75px
    overflow hidden
    animate()
    h1
        opacity 0
        visibility hidden
        animate()
    li a
        display flex
        width 100%
        align-items center
        padding 10px
    i
        --ggs 2
    .icon
        width 55px
        height 55px
        min-width 55px
        margin-right 10px
        display flex
        justify-content center
        align-items center
    .name
        overflow hidden
        display -webkit-box
        -webkit-line-clamp 2
        -webkit-box-orient vertical
    button
        display none
        position absolute
        right 0
    &:hover
        width 200px
        overflow-y auto
        &::-webkit-scrollbar
            width 5px
        &::-webkit-scrollbar-track
            background transparent
        &::-webkit-scrollbar-thumb
            background #bbb
            border-radius 5px
        h1
            visibility visible
            opacity 1

.main
    margin-left 75px
