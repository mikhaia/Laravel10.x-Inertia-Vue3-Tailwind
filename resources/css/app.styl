/* I just love Stylus so much */
.sidenav
    list-style none
    display flex
    flex-direction column
    li
        background #fff
    a
        display block
        padding 20px
        color #fff
        position relative
        background #1F2937
    .active
        background #1F2937
        position relative
        &:before
            content ''
            position absolute
            width 10px
            height 10px
            background #fff
            top -10px
            right 0
        a
            background #fff
            color #000
            border-radius 10px 0 0 10px
            &:before
                content ''
                position absolute
                background #1F2937
                border-radius 10px
                width 20px
                height 20px
                top -20px
                right 0
        + li a
            border-top-right-radius 10px

.glass
    background rgba(255, 255, 255, 0.2)
    border-radius 10px
    box-shadow 0 4px 30px rgba(0, 0, 0, 0.1)
    backdrop-filter blur(5px)
    -webkit-backdrop-filter blur(5px)
    border 1px solid rgba(255, 255, 255, 0.3)

.columns
    padding 10px
    height 100vh

.column
    float left
    width 300px
    height 100%
    margin 0 10px

.card
    margin 5px
    border 1px solid #777
    background #eee
    border-radius 10px
    overflow hidden

