@require '_icon'
@require '_conf'
@require '_sidebar'
@require '_form'
@require '_auth'
@require '_dashboard'
@require '_switcher'

body, #app
    height 100vh

hr
    border-color #bbb
    width 80%
    box-shadow 0 2px 2px #000

.glass
    background rgba(255, 255, 255, 0.2)
    border-radius 10px
    box-shadow 0 4px 30px rgba(0, 0, 0, 0.1)
    backdrop-filter blur(5px)
    -webkit-backdrop-filter blur(5px)
    border 1px solid rgba(255, 255, 255, 0.3)

.columns
    padding 10px
    white-space nowrap
    overflow-x auto
    .drag, .add, .column, .droptarget
        display inline-block
        float none
        vertical-align top
    .drag, .droptarget
        height 100%

.column
    float left
    width 300px    
    padding-bottom 20px
    &.add
        height 100vh
        max-height 100%
        position relative
        cursor pointer
        opacity .5
        animate()
        &:before
            content '+'
            background rgba(255,255,255,.5)
            color #fff
            border-radius 50%
            font-size 100px
            line-height 75px
            abscenter(100, 100)
        &:hover
            opacity 1

.card-droptarget
    height 10px
    &.active
        height 45px
        padding 5px
        &:after
            content 'Insert here'
            background rgba(255, 255, 255, 0.2)
            border-radius 10px
            text-align center
            color #fff
            display block
            padding 5px

.droptarget
    width 20px
    height 100vh
    float left
    &.active
        width 300px
        height 100vh
        padding 0 10px
        &:after
            content 'Insert here'
            color #fff
            text-shadow 0 0 3px #000
            text-align center
            background rgba(255, 255, 255, 0.2)
            border-radius 10px
            box-shadow 0 4px 30px rgba(0, 0, 0, 0.1)
            backdrop-filter blur(5px)
            -webkit-backdrop-filter blur(5px)
            border 1px solid rgba(255, 255, 255, 0.3)
            padding 50px 20px
            height 200px
            font-size 21px
            font-weight bold
            display block
            padding-bottom 35px

.moving
    opacity .4
    .droptarget
        visibility hidden
        width 20px
                

.card
    margin 0 5px
    border 1px solid #bbb
    background #eee
    border-radius 10px
    overflow hidden
    position relative
    min-height 32px
    min-width 286px
    &:hover
        box-shadow 0 0 5px #fff
    .back
        width 100%
        height 161px
        background center center no-repeat #bbb
        background-size cover
        .icon
            animate()
            border-bottom-right-radius 10px
    .title
        font-weight bold
        position absolute
        bottom 0
        background rgba(255,255,255,.5)
        &.top-title
            bottom auto
            top 0
    .description
        padding 5px
        white-space normal
        ul
            list-style disc
            padding-left 30px


.edit-board-btn
    position relative
    z-index 2
    float right
    font-size 1.25rem
    margin 5px

.btn-create
    background #eee
    border 1px solid #bbb
    cursor pointer
    display block
    margin 10px 5px
    padding 5px 10px
    text-align center
    &:hover
        box-shadow 0 0 5px #fff

.modal
    position fixed
    z-index 100
    top 0
    bottom 0
    right 0
    left 0
    background rgba(0,0,0,.5)
    display flex
    align-items center
    .container
        background rgba(255, 255, 255, 0.5)
        width 340px
        margin auto
        padding 10px 15px
    .card-container
        width 680px
    .title
        font-size 21px
        font-weight bold
        line-height 40px
        white-space nowrap

button.button
    background #1F2937
    color #fff
    border-radius: 3px
    line-height 40px
    &:hover
        background #000

.btn-close
    width 40px
    height 40px
    border-radius 40px
    position absolute
    z-index 1
    cursor pointer
    display inline-block
    right 0
    margin-right 5px
    &:before
        content '+'
        color #1f2937
        position absolute
        z-index 2
        transform rotate(45deg)
        font-size 50px
        line-height 45px
        top -5px
        left 6px
        transition all 0.3s cubic-bezier(0.77, 0, 0.2, 0.85)
    &:after
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        border-radius 100%
        background #1f2937
        z-index 1
        transition all 0.3s cubic-bezier(0.77, 0, 0.2, 0.85)
        transform scale(0.01)
    &:hover
        &:after
            transform scale(1)
        &:before
            transform scale(0.8) rotate(45deg)
            color #fff

.msg-error
    background #9a365c
    color #fff
    border 1px solid
    border-radius 5px
    padding 5px 15px
    margin 10px 0
    box-shadow 0 0 3px #000
    text-shadow 1px 1px #000

.user-panel
    position absolute
    right 0
    top 0
    z-index 1
    padding 5px 10px
    background #fff
    border-bottom-left-radius 5px
    box-shadow 0 0 5px #888
    .exit
        background #9a365c
        color #fff
        display inline-block
        width 25px
        height 25px
        border-radius 50%
        text-align center
        line-height 20px
        margin-left 10px
    .avatar
        float left
        width 25px
        border-radius 5px
        margin-right 10px

.toast
    abscenter(400)
    animate()
    background #9a365c
    color #fff
    border 1px solid
    border-radius 5px
    padding 5px 15px
    box-shadow 0 0 3px #000
    text-shadow 1px 1px #000
    opacity 1
    z-index 1000
    height auto
    margin-top 0
    top 50px
    &.error
        background #9a365c
    &.success
        background #148f5b

.board
    cover('board.jpg')
    width 100%
    display flex
    flex-direction column
    .header
        display flex
        align-items center
        .icon
            border-radius 5px
            border-top-left-radius 0
            height 50px
        h1
            font-size 24px
            font-weight bold
            // background rgba(255, 255, 255, .5)
            border-radius 5px
            margin 0 20px
            padding 0 20px
            // box-shadow 0 0 5px #fff

.board.mode-dark
    .header h1
        color color-white
    .column h4
        color color-white

.board.mode-light
    .header h1
        color color-black
    .column h4
        color color-black

