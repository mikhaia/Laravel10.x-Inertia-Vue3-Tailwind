--light = #d8dbe0
--dark = #28292c

.toggle-switch
    position relative
    width 50px
    margin-top -25px
    label
        position absolute
        width 100%
        height 25px
        background-color color-primary
        border-radius 12px
        cursor pointer
        box-shadow 0 0 2px color-white

    input
        position absolute
        display none
        &:checked
            & ~ .slider
                background-color --light
                &::before
                    transform translateX(23.75px)
                    background-color color-primary
                    box-shadow none

    .slider
        position absolute
        width 100%
        height 100%
        border-radius 25px
        transition 0.3s
        &::before
            content ""
            position absolute
            top 2.25px
            left 4px
            width 20px
            height 20px
            border-radius 50%
            box-shadow inset 7px -1px 0px 0px --light
            background-color color-primary
            transition 0.3s