.form
    .form-input
        position relative
        padding-top 20px
        padding-bottom 10px
        clear both
        input
            outline none
            padding 5px 10px
            color #777
            border 1px solid
            border-radius 5px
            width 100%
            &:focus
                box-shadow 0 0 5px #777
                border-color #9a365c
            &::placeholder
                color #fff
            &:not(:placeholder-shown) + label,
            &:focus + label
                top -5px
                left 0px
        label
            position absolute
            left 10px
            top 25px
            cursor inherit
    .form-textarea
        textarea
            outline none
            padding 5px 10px
            color #777
            border 1px solid
            border-radius 5px
            width 100%
            &:focus
                box-shadow 0 0 5px #777
                border-color #9a365c
            &::placeholder
                color #fff
            &:not(:placeholder-shown) + label,
            &:focus + label
                top -5px
                left 0px
    .form-todo
        display flex
        flex-direction column
        textarea
            height 100%
            &::placeholder
                color #bbb
    .cutter
        display block
        text-align center
        cursor pointer
        &.expand .icon
            transform rotate(-180deg)
        .icon
            display inline-block
            transition all .3s ease-out
    .form-file
        padding 10px 0
        img
            border-radius 10px
        label
            border 1px dashed #333
            border-radius 3px
            display block
            padding 5px 8px
            position relative
            input
                display none
            &:hover:before
                // TODO: use pos
                content 'Click to change Image'
                position absolute
                display flex
                left 0
                right 0
                top 0
                bottom 0
                cursor pointer
                align-items center
                justify-content center
                background rgba(0,0,0,.7)
                color #fff
                font-weight bold

    .form-icon
        label
            display flex
            align-items center
            gap 10px
            flex-direction row-reverse
            justify-content left
    .form-checkbox
        padding-bottom 10px
        label
            display flex
            align-items center
            gap 5px
        input
            width 20px
            height 20px
            cursor pointer
    .form-select
        display flex
        flex-direction row-reverse
        align-items center
        gap 10px
        padding-bottom 10px
        select
            outline none
            padding 5px 10px
            color #777
            border 1px solid
            border-radius 5px
            width 100%
