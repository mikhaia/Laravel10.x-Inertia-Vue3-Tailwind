.form
    .form-input
        position relative
        padding 20px 0
        clear both
        input
            padding 5px 10px
            border 1px solid #333
            border-radius 3px
            width 100%
            &::placeholder
                color #fff
            &:not(:placeholder-shown) + label,
            &:focus + label
                top -5px
        label
            position absolute
            left 10px
            top 25px
            cursor inherit
    .cutter
        display block
        text-align center
        cursor pointer
    .form-file
        padding 10px 0
        img
            border-radius 10px
        label
            border 1px dashed #333
            border-radius 3px
            display block
            padding 5px 8px
            position relative
            input
                display none
            &:hover:before
                content 'Click to hange Image'
                position absolute
                display flex
                left 0
                right 0
                top 0
                bottom 0
                cursor pointer
                align-items center
                justify-content center
                background rgba(0,0,0,.7)
                color #fff
                font-weight bold

    .form-icon
        label
            display flex
            align-items center
            gap 10px
    .form-checkbox
        padding-bottom 10px
        label
            display flex
            align-items center
            gap 5px
        input
            width 20px
            height 20px
            cursor pointer
